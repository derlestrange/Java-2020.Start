<?xml version="1.0" encoding="UTF-8"?>
<configuration status="WARN">
    <appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%m%n"/>
        </Console>

        <File name="WrongFormatInput" fileName="logs/input_errors.log">
            <MarkerFilter marker="WrongFormatPath" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </File>

        <File name="Exception" fileName="logs/exceptions.log">
            <MarkerFilter marker="Exceptions" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </appenders>

    <loggers>


        <logger name="ExceptionsLogger" level="error" >
            <appender-ref ref="Exception"/>
        </logger>

        <root level="info">
           <appender-ref ref="STDOUT"/>
        </root>
    </loggers>
</configuration>